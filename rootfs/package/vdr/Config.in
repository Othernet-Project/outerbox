config BR2_PACKAGE_VDR
	bool "vdr"
	depends on BR2_PACKAGE_XORG7
	select BR2_PACKAGE_XLIB_LIBX11
	select BR2_PACKAGE_XLIB_LIBXEXT
	select BR2_PACKAGE_XLIB_LIBXRENDER
	select BR2_PACKAGE_LIBCAP
	select BR2_PACKAGE_JPEG
	select BR2_PACKAGE_FONTCONFIG
	select BR2_PACKAGE_FREETYPE
	help
	  The Video Disk Recorder

	  http://www.tvdr.de

comment "vdr depends on Xorg"
	depends on !BR2_PACKAGE_XORG7

if BR2_PACKAGE_VDR

menu "VDR plugins selection"

config BR2_PACKAGE_VDR_XINELIBOUTPUT
	bool "vdr-xineliboutput"
	depends on BR2_PACKAGE_XINELIB
	default n
	help
	  xineliboutput plugin

comment "vdr-xineliboutput depends on xinelib"
	depends on !BR2_PACKAGE_XINELIB

endmenu

endif
