config BR2_PACKAGE_XINELIB
	bool "xinelib"
	select BR2_PACKAGE_FFMPEG
	select BR2_PACKAGE_XLIB_LIBXV
	select BR2_PACKAGE_ALSA_LIB
	select BR2_PACKAGE_XLIB_LIBICE
	select BR2_PACKAGE_XLIB_LIBSM
	select BR2_PACKAGE_XLIB_LIBXEXT
	select BR2_PACKAGE_MESA3D
	select BR2_PACKAGE_LIBVDPAU
	select BR2_PACKAGE_LIBBLURAY
	select BR2_PACKAGE_FLAC
	select BR2_PACKAGE_LIBGLU
	select BR2_PACKAGE_LIBMAD
	select BR2_PACKAGE_LIBMODPLUG
	select BR2_PACKAGE_LIBVORBIS
	default n
	help
	  xine is a free multimedia player. It plays back CDs, DVDs, and VCDs. It
	  also decodes multimedia files like AVI, MOV, WMV, and MP3 from local disk
	  drives, and displays multimedia streamed over the Internet. It interprets
	  many of the most common multimedia formats available â€“ and some of the
	  most uncommon formats, too.

	  https://www.xine-project.org/

comment "xinelib depends on libgl, libglu"
	depends on !BR2_PACKAGE_HAS_LIBGL || !BR2_PACKAGE_LIBGLU
